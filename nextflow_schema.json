{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/CCBR/MOSuite-Nextflow//nextflow_schema.json",
    "title": "CCBR/MOSuite-Nextflow pipeline parameters",
    "description": "Nextflow pipeline for differential multi-omics analysis",
    "type": "object",
    "$defs": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": ["samplesheet", "counts"],
            "properties": {
                "samplesheet": {
                    "type": "string"
                },
                "counts": {
                    "type": "string"
                },
                "outputDir": {
                    "type": "string",
                    "default": "results"
                },
                "tracedir": {
                    "type": "string",
                    "default": "results/pipeline_info"
                },
                "publish_dir_mode": {
                    "type": "string",
                    "default": "link"
                }
            }
        },
        "clean_raw_counts": {
            "title": "Clean raw counts",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "aggregate_rows_with_duplicate_gene_names": {
                    "type": "boolean",
                    "default": true
                },
                "cleanup_column_names": {
                    "type": "boolean",
                    "default": true
                },
                "split_gene_name": {
                    "type": "boolean",
                    "default": true
                },
                "gene_name_column_to_use_for_collapsing_duplicates": {
                    "type": "string"
                }
            }
        },
        "filter_counts": {
            "title": "Filter counts",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "filter_group_colname": {
                    "type": "string",
                    "default": "Group"
                },
                "filter_label_colname": {
                    "type": "string"
                },
                "filter_minimum_count_value_to_be_considered_nonzero": {
                    "type": "integer",
                    "default": 8
                },
                "filter_minimum_number_of_samples_with_nonzero_counts_in_total": {
                    "type": "integer",
                    "default": 7
                },
                "filter_minimum_number_of_samples_with_nonzero_counts_in_a_group": {
                    "type": "integer",
                    "default": 3
                },
                "filter_use_cpm_counts": {
                    "type": "boolean",
                    "default": true
                },
                "filter_use_group_based": {
                    "type": "boolean"
                }
            }
        },
        "normalize_counts": {
            "title": "Normalize counts",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "norm_group_colname": {
                    "type": "string",
                    "default": "Group"
                },
                "norm_label_colname": {
                    "type": "string"
                },
                "norm_input_in_log_counts": {
                    "type": "boolean"
                },
                "voom_normalization_method": {
                    "type": "string",
                    "default": "quantile"
                }
            }
        },
        "batch_correct_counts": {
            "title": "Batch correct counts",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "batch_covariates_colnames": {
                    "type": "string",
                    "default": "Group"
                },
                "batch_colname": {
                    "type": "string",
                    "default": "Batch"
                },
                "batch_label_colname": {
                    "type": "string"
                },
                "batch_colors_for_plots": {
                    "type": "string"
                }
            }
        },
        "diff_counts": {
            "title": "Differential counts",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "diff_count_type": {
                    "type": "string",
                    "default": "filt"
                },
                "diff_sub_count_type": {
                    "type": "string"
                },
                "diff_sample_id_colname": {
                    "type": "string"
                },
                "diff_feature_id_colname": {
                    "type": "string"
                },
                "diff_samples_to_include": {
                    "type": "string"
                },
                "diff_covariates_colnames": {
                    "type": "string"
                },
                "diff_contrast_colname": {
                    "type": "string"
                },
                "diff_contrasts": {
                    "type": "string"
                },
                "diff_input_in_log_counts": {
                    "type": "boolean",
                    "default": false
                },
                "diff_return_mean_and_sd": {
                    "type": "boolean",
                    "default": false
                },
                "diff_voom_normalization_method": {
                    "type": "string",
                    "default": "quantile"
                }
            }
        },
        "filter_diff": {
            "title": "Filter differential",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "filter_diff_significance_column": {
                    "type": "string",
                    "default": "adjpval"
                },
                "filter_diff_significance_cutoff": {
                    "type": "number",
                    "default": 0.05
                },
                "filter_diff_change_column": {
                    "type": "string",
                    "default": "logFC"
                },
                "filter_diff_change_cutoff": {
                    "type": "number",
                    "default": 1
                },
                "filter_diff_filtering_mode": {
                    "type": "string",
                    "default": "any"
                },
                "filter_diff_include_estimates": {
                    "type": "string",
                    "default": "FC,logFC,tstat,pval,adjpval"
                },
                "filter_diff_round_estimates": {
                    "type": "boolean",
                    "default": true
                },
                "filter_diff_rounding_decimal_for_percent_cells": {
                    "type": "integer",
                    "default": 0
                },
                "filter_diff_contrast_filter": {
                    "type": "string",
                    "default": "none"
                },
                "filter_diff_contrasts": {
                    "type": "string"
                },
                "filter_diff_groups": {
                    "type": "string"
                },
                "filter_diff_groups_filter": {
                    "type": "string",
                    "default": "none"
                },
                "filter_diff_label_font_size": {
                    "type": "number",
                    "default": 6
                },
                "filter_diff_label_distance": {
                    "type": "number",
                    "default": 1
                },
                "filter_diff_y_axis_expansion": {
                    "type": "number",
                    "default": 0.08
                },
                "filter_diff_fill_colors": {
                    "type": "string",
                    "default": "steelblue1,whitesmoke"
                },
                "filter_diff_pie_chart_in_3d": {
                    "type": "boolean",
                    "default": true
                },
                "filter_diff_bar_width": {
                    "type": "number",
                    "default": 0.4
                },
                "filter_diff_draw_bar_border": {
                    "type": "boolean",
                    "default": true
                },
                "filter_diff_plot_type": {
                    "type": "string",
                    "default": "bar"
                },
                "filter_diff_plot_titles_fontsize": {
                    "type": "number",
                    "default": 12
                }
            }
        },
        "developer_options": {
            "title": "Developer options",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "container": {
                    "type": "string",
                    "default": "nciccbr/mosuite:v0.2.0.9000_3807d01",
                    "hidden": true
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/input_output_options"
        },
        {
            "$ref": "#/$defs/clean_raw_counts"
        },
        {
            "$ref": "#/$defs/filter_counts"
        },
        {
            "$ref": "#/$defs/normalize_counts"
        },
        {
            "$ref": "#/$defs/batch_correct_counts"
        },
        {
            "$ref": "#/$defs/diff_counts"
        },
        {
            "$ref": "#/$defs/diff_counts"
        },
        {
            "$ref": "#/$defs/filter_diff"
        },
        {
            "$ref": "#/$defs/developer_options"
        }
    ]
}
